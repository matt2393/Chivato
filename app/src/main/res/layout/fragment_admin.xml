<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:id="@+id/tipo_not_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/text_curvo"
        android:textColor="@color/color_white"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Tipos de noticia"
        app:layout_constraintBottom_toTopOf="@id/rol_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/rol_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/text_curvo"
        android:textColor="@color/color_white"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Roles de Usuario"
        app:layout_constraintBottom_toTopOf="@id/users_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tipo_not_admin" />

    <TextView
        android:id="@+id/users_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/text_curvo"
        android:textColor="@color/color_white"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Usuarios"
        app:layout_constraintBottom_toTopOf="@id/edit_perfil_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rol_admin" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_perfil_user"
            android:text="Editar Datos personales"
            android:drawableLeft="@drawable/ic_baseline_edit"
            android:layout_margin="10dp"
            android:background="@drawable/text_curvo"
            android:textColor="@color/color_white"
            android:padding="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawablePadding="15dp"
            app:layout_constraintTop_toBottomOf="@id/users_admin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>