<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutTituloNot"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutDescNot">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titulo"
                android:id="@+id/add_titulo_not"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutDescNot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutTituloNot"
            app:layout_constraintBottom_toTopOf="@id/linearrrr1">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                android:id="@+id/add_desc_not"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearrrr1"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutDescNot"
            app:layout_constraintBottom_toTopOf="@id/new_doc_add_not">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prioridad:"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/prioridad_group"
            android:layout_gravity="center_horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alta"
                android:id="@+id/alta_prio"
                android:layout_marginStart="5dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:checked="true"
                android:id="@+id/normal_prio"
                android:layout_marginStart="5dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baja"
                android:layout_marginStart="5dp"
                android:id="@+id/baja_prio"/>
        </RadioGroup>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:text="Enviar Notificación"
                android:id="@+id/notificacion_push"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_doc_add_not"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/color_white"
            android:drawableStart="@drawable/baseline_add"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="Agregar Documento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearrrr1"
            app:layout_constraintBottom_toTopOf="@id/nom_doc_not"
            app:layout_constraintHorizontal_bias="0.9"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_doc_not"
            android:src="@drawable/img_pdf"
            app:layout_constraintTop_toBottomOf="@id/new_doc_add_not"
            app:layout_constraintBottom_toTopOf="@id/new_image_add_not"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nom_doc_not"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nom_doc_not"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_doc_not"
            app:layout_constraintTop_toBottomOf="@id/new_doc_add_not"
            app:layout_constraintBottom_toTopOf="@id/new_image_add_not"
            android:layout_margin="10dp"
            android:drawablePadding="5dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_image_add_not"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/color_white"
            android:drawableStart="@drawable/baseline_add"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="Nueva imagen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nom_doc_not"
            app:layout_constraintBottom_toTopOf="@id/recycler_add_not"
            app:layout_constraintHorizontal_bias="0.9"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_add_not"
            android:layout_marginTop="5dp"
            android:scrollbars="horizontal"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_image_add_not"
            app:layout_constraintBottom_toBottomOf="@id/guarda_noticia">

        </android.support.v7.widget.RecyclerView>
        <Button
            android:id="@+id/guarda_noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Guardar"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayoutDescNot"
            app:layout_constraintStart_toStartOf="@+id/textInputLayoutDescNot"
            app:layout_constraintTop_toBottomOf="@id/recycler_add_not"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
